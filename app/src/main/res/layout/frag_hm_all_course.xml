<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@id/all_course_page"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@id/all_course_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/list_view_divider"
            android:fastScrollEnabled="true"
            android:listSelector="@drawable/list_item_selector" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/page_loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_marginTop="162.0dip"
            android:indeterminateDrawable="@drawable/vopen_progress_anim" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.0dip"
            android:text="@string/loading"
            android:textAppearance="@style/no_item_style" />
    </LinearLayout>
</FrameLayout>
