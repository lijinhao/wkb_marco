<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/filter_board_expand"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filter_bg"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="20.0dip"
    android:paddingLeft="20.0dip"
    android:paddingRight="20.0dip"
    android:paddingTop="13.0dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7.0dip"
        android:text="@string/all_course_filter_tag"
        android:textAppearance="@style/filter_panel_title_text" />

    <com.netease.vopen.view.MyGridView
        android:id="@id/filter_tag_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:horizontalSpacing="0.0dip"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:verticalSpacing="10.0dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7.0dip"
        android:layout_marginTop="15.0dip"
        android:text="@string/all_course_filter_source"
        android:textAppearance="@style/filter_panel_title_text" />

    <com.netease.vopen.view.MyGridView
        android:id="@id/filter_source_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:cacheColorHint="#00000000"
        android:horizontalSpacing="0.0dip"
        android:listSelector="#00000000"
        android:numColumns="4" />

    <com.netease.vopen.view.MyGridView
        android:id="@id/sort_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.0dip"
        android:cacheColorHint="#00000000"
        android:horizontalSpacing="0.0dip"
        android:listSelector="#00000000"
        android:numColumns="4" />
</LinearLayout>
