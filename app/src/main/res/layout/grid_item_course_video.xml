<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/vlist_course_index_big"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/video_btn_bg"
        android:gravity="center"
        android:text="第1课"
        android:textColor="@color/text_black"
        android:textSize="18.0sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@id/vlist_course_small_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/video_btn_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@id/vlist_course_index_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="第1课"
            android:textColor="@color/text_black"
            android:textSize="14.0sp" />

        <TextView
            android:id="@id/vlist_tag_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/video_downloaded_bg"
            android:gravity="center"
            android:text="@string/vdetail_tag_downloaded"
            android:textColor="@color/white"
            android:textSize="8.0sp"
            android:visibility="visible" />

        <TextView
            android:id="@id/vlist_tag_not_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/video_not_available_bg"
            android:gravity="center"
            android:text="@string/vdetail_tag_not_available"
            android:textColor="@color/white"
            android:textSize="8.0sp"
            android:visibility="gone" />
    </LinearLayout>

    <ProgressBar
        android:id="@id/vlist_play_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:layout_marginTop="-4.0dip"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/video_play_progress2" />
</LinearLayout>
