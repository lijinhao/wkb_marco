<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10.0dip">

    <RelativeLayout
        android:id="@id/login_username_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0dip"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@id/login_username"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:background="@drawable/text_input_bg"
            android:hint="@string/login_account_hint"
            android:inputType="textEmailAddress"
            android:paddingLeft="5.0dip"
            android:saveEnabled="true"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textSize="18.0sp" />

        <ImageButton
            android:id="@id/login_username_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/login_clear_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/login_psw_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33.0dip"
        android:orientation="horizontal">

        <EditText
            android:id="@id/login_password"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:background="@drawable/text_input_bg"
            android:hint="@string/login_account_pwd_hint"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="5.0dip"
            android:saveEnabled="true"
            android:textColor="@color/text_black"
            android:textSize="18.0sp" />

        <ImageButton
            android:id="@id/login_password_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/login_clear_btn" />
    </RelativeLayout>

    <TextView
        android:id="@id/login_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/btn_green_big_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="@string/login_button_text"
        android:textColor="@color/white_text_btn_selector"
        android:textSize="20.0sp"
        android:visibility="visible" />

    <TextView
        android:id="@id/login_register_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:gravity="center_horizontal"
        android:text="@string/login_register_text"
        android:textColor="@color/text_green"
        android:textSize="13.0sp" />
</LinearLayout>
