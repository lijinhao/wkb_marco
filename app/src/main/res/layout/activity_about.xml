<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/about_sv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:src="@drawable/about_logo" />

        <TextView
            android:id="@id/build_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:gravity="center"
            android:text="version 3.2 build 25"
            android:textColor="@color/text_black"
            android:textSize="10.0sp" />

        <TextView
            android:id="@id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/btn_green_small_bg"
            android:gravity="center"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:text="@string/about_checkupdate"
            android:textColor="@color/white_text_btn_selector" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20.0dip">

            <LinearLayout
                android:id="@id/about_pb"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textColor="@color/text_black"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <TextView
                android:id="@id/about_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28.0dip"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/text_black"
                android:textSize="14.0sp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@id/about_copyright"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/copyright"
            android:textColor="@color/text_gray"
            android:textSize="14.0sp"
            android:visibility="visible" />
    </LinearLayout>
</ScrollView>
