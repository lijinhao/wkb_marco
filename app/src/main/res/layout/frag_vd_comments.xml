<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.netease.vopen.view.ObservableScrollView
        android:id="@id/my_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="40.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="18.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/comment_title"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left|center"
                    android:textColor="@color/text_black"
                    android:textSize="17.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_marginTop="10.0dip"
                android:background="#ffcccccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/comment_hot"
                android:textColor="@color/text_black"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/no_hot_comment_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/comment_count_is_null"
                android:textColor="@color/text_black"
                android:textSize="16.0sp"
                android:visibility="gone" />

            <WebView
                android:id="@id/hot_comment_webview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="@string/comment_latest"
                android:textColor="@color/text_black"
                android:textSize="16.0sp" />

            <TextView
                android:id="@id/no_latest_comment_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/comment_count_is_null"
                android:textColor="@color/text_black"
                android:textSize="16.0sp"
                android:visibility="gone" />

            <WebView
                android:id="@id/latest_comment_webview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" />

            <LinearLayout
                android:id="@id/show_next_page"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@id/list_more_pb"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@id/list_more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/foot_querying"
                    android:textColor="#ff808080"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </LinearLayout>
    </com.netease.vopen.view.ObservableScrollView>

    <ImageView
        android:id="@id/write_comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|center"
        android:layout_marginBottom="26.0dip"
        android:layout_marginRight="10.0dip"
        android:gravity="center_vertical"
        android:src="@drawable/comment_write_btn" />
</FrameLayout>
