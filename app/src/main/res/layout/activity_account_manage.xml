<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/my_account_layout"
            android:layout_width="fill_parent"
            android:layout_height="74.0dip"
            android:background="#ffe6e6e6"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <ImageView
                android:id="@id/my_account_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_my_photo" />

            <TextView
                android:id="@id/my_account_name"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/account_not_login"
                android:textAppearance="@style/my_list_item" />

            <TextView
                android:id="@id/my_account_log"
                android:layout_width="wrap_content"
                android:layout_height="33.0dip"
                android:background="@drawable/signin_btn_bg"
                android:gravity="center"
                android:minWidth="66.0dip"
                android:text="@string/account_login"
                android:textAppearance="@style/download_count_indicator" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/background_gray" />

        <LinearLayout
            android:id="@id/sina_layout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <ImageView
                android:id="@id/sina_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/binding_sinaweibo2" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@id/sina_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/account_weibo_type_sina"
                    android:textAppearance="@style/my_account_name" />

                <TextView
                    android:id="@id/sina_summary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAppearance="@style/my_account_summary"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@id/sina_bind_unbind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/binding_btn_bg"
                android:drawableLeft="@drawable/ico_binding"
                android:drawablePadding="6.0dip"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="@string/account_weibo_bind" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/list_view_divider" />

        <LinearLayout
            android:id="@id/tencent_layout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <ImageView
                android:id="@id/tencent_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/binding_qqweibo2" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@id/tencent_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/account_weibo_type_tencent"
                    android:textAppearance="@style/my_account_name" />

                <TextView
                    android:id="@id/tencent_summary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAppearance="@style/my_account_summary"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@id/tencent_bind_unbind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/binding_btn_bg"
                android:drawableLeft="@drawable/ico_binding"
                android:drawablePadding="6.0dip"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="@string/account_weibo_bind" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/list_view_divider" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:text="@string/account_weibo_description_text"
            android:textColor="@color/text_gray"
            android:textSize="13.0sp" />
    </LinearLayout>
</ScrollView>
